<style type="text/css">
body {
  <%= "background: #{@bcolor};" if defined?(@bcolor) %>
}
h1, h2 {
  
  <%= "color: #{@fcolor};" if defined?(@fcolor) %>
}
body a, .btn-link {
  color: <%= defined?(@acolor) ? @acolor : '#00a489' %>;
}
body a:hover, .btn-link:focus, .btn-link:hover {
  color: <%= defined?(@hcolor) ? @hcolor : '#005849' %>;
}
.btn:focus, .btn.focus {
  <%= "box-shadow: 0 0 0 2px #{@acolor};" if defined?(@acolor) %>;
}
.btn-primary {
  border-color: <%= defined?(@acolor) ? @acolor : '#00a489' %>;
  background: <%= defined?(@acolor) ? @acolor : '#00a489' %>;
}
.btn-primary:hover, btn-primary:focus {
  background: <%= defined?(@hcolor) ? @hcolor : '#005849' %>;
  border-color: <%= defined?(@hcolor) ? @hcolor : '#005849' %>;
}
html, body {
  min-height:100vh;
}
body {
  display: flex;
  flex-flow: column;
}
#content {
  margin-top: auto !important;
  margin-bottom: auto !important;
}
</style>
