<style type="text/css">
  body {
    <%= "background: #{@bcolor};" if defined?(@bcolor) %>
    <%= "color: #{@fcolor};" if defined?(@fcolor) %>
    font: 0.8em "DejaVu Sans", "Bitstream Vera Sans", Verdana, sans-serif;
    margin: 16px;
    margin-top: 0px;
    padding: 0;
  }
  #soo_pkg a {
    color: <%= defined?(@acolor) ? @acolor : '#00f' %>;
  }
  .soo_line {
    color: <%= defined?(@hcolor) ? @hcolor : '#480' %>;
    clear: both;
    border-bottom: 1px solid rgb(128,128,128);
    border-bottom: 1px solid rgba(128,128,128,0.25);
    padding-top: 10px;
    font-size: 1.1em;
    display: none;
    cursor: pointer;
  }
  .soo_line span {
    float: right;
  }
  .soo_line_visible {
    display: block;
  }
  .soo_button {
    display: block;
    float: left;
    cursor: pointer;
    border: 1px solid transparent;
    padding: 3px 5px;
    margin: 0 .5em 0 1em;
    -moz-border-radius: 8px;
    border-radius: 8px;
  }
  .soo_button:hover, .soo_button_chosen {
    border: 1px solid rgb(128,128,128);
    border: 1px solid rgba(128,128,128,0.25);
    background: rgb(128,128,128);
    background: rgba(128,128,128,0.1);
  }
  .soo_button p {
    font-size: 0.75em;
    text-align: center;
    margin: 0;
  }
  .soo_ymplink {
    color: white !important;
    display: block;
    margin: 6px;
    line-height: 20px;
    font-weight: bolder;
    float: left;
    text-decoration: none;
    text-align: center;
    -moz-border-radius: 12px;
    border-radius: 12px;
    padding-left: 8px;
    padding-right: 8px;
    <%= gradient('#9D0','#7B0','#580') %>
    border: 1px solid #490;
    min-width: 112px;
    font-size: 0.85em;
  }
  #soo_repo pre {
    background: rgb(128,128,128);
    background: rgba(128,128,128,0.1);
    border: 1px dotted #808080;
    padding: 4px;
    margin-left: 2em;
    font-size: 1.2em;
    overflow-x: auto;
  }
  #soo_repo pre a {
    text-decoration: none;
    color: #008;
  }
  .soo_distro {
    display: none;
  }
  #soo_pkg li {
    margin: 6px;
  }
</style>

