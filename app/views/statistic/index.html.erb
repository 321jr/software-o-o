<% @page_title = _("Statistics") -%>

<div class="box box-shadow">
  <h2 class="box-header">
    <span class="alignleft"><%= @page_title -%></span></h2>
  <div>

    <h2><%= _("Search Statistics:") %></h2>
    <p><i>Numbers are for the last 3 months.</i></p>

    <h3><%= _("Top searches:") %></h3>

    <ol>
      <% top = @top_searches -%>
      <% top.each do |item| -%>
        <li><%= h item[:query] %> (<%= h item[:count] %>)</li>
      <% end -%>
    </ol>

    <h3><%= _("Top searches without hits:") %></h3>

    <ol>
      <% top = @failed_searches -%>
      <% top.each do |item| -%>
        <li><%= h item[:query] %> (<%= h item[:count] %>)</li>
      <% end -%>
    </ol>


    <h2><%= _("Download Statistics:") %></h2>

    <h3><%= _("Top 1-click downloads:") %></h3>

    <ol>
      <% top = top_downloads -%>
      <% top.each do |item| -%>
        <li><%= h item[:query] %> (<%= h item[:count] %>)</li>
      <% end -%>
    </ol>

  </div>
</div>
