<% @page_title = _("Statistics") -%>

<div class="grid_12 alpha omega box box-shadow">

  <h2 class="box-header">
    <span class="alignleft"><%= @page_title -%></span></h2>

  <div class="grid_4 alpha omega">
    <h3><%= _("Top searches:") %></h3>
    <ol>
      <% top = @top_searches -%>
      <% top.each do |item| -%>
        <li><%= link_to item[:query], :controller => :search, :action => :searchresult, :q =>item[:query] %> (<%= h item[:count] %>)</li>
      <% end -%>
    </ol>
  </div>

  <div class="grid_4 alpha omega">
    <h3><%= _("Top searches without hits:") %></h3>
    <ol>
      <% top = @failed_searches -%>
      <% top.each do |item| -%>
        <li><%= link_to item[:query], :controller => :search, :action => :searchresult, :q =>item[:query] %> (<%= h item[:count] %>)</li>
      <% end -%>
    </ol>
  </div>


  <div class="grid_4 alpha omega">
    <h3><%= _("Top 1-click downloads:") %></h3>
    <ol>
      <% top = top_downloads -%>
      <% top.each do |item| -%>
        <li><%= link_to item[:query], :controller => :search, :action => :searchresult, :q =>item[:query] %> (<%= h item[:count] %>)</li>
      <% end -%>
    </ol>
  </div>


  <div class="grid_4 alpha omega">
    <h3><%= _("Last searches:") %></h3>
    <ol>
      <% last = @last_searches -%>
      <% last.each do |item| -%>
        <li><%= link_to item[:query], :controller => :search, :action => :searchresult, :q =>item[:query] %> (<%= h item[:count] %>)</li>
      <% end -%>
    </ol>
  </div>

</div>
